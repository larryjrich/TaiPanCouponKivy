#:kivy 1.0.9
<TaiPanRootWidget>:
    button_search: id_button_search
    text_days: id_text_days
    placholder_label: id_placeholder_label
    coupon_image: id_coupon_image
    GridLayout:
        cols: 1
        rows: 3
        size_hint_y: None
        size: root.size
        Label:
            pos: root.width * .50, root.height * .50
            text: "Tai Pan Coupon Locator"
            font_size: 40
            height: root.height * .10
            size_hint_y: None
        GridLayout:
            rows: 1
            cols: 3
            height: root.height * .10
            size_hint_y: None
            Label:
                font_size: 20
                text: "Enter number of days:"
            TextInput:
                id: id_text_days
                text: "7"
                font_size: 40
            Button:
                id: id_button_search
                text: "Search"
                font_size: 40
                on_press: root.search_taipan_coupon()
        Label:
            text: "(No Image)"
            id: id_placeholder_label
        AsyncImage:
            source: None
            id: id_coupon_image
            height: root.height * .75
            width: root.width
